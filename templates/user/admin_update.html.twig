{% extends 'base.html.twig' %}

{% block title %}Edit Participant{% endblock %}

{% block body %}
    <div class="column is-offset-9">
        <p>Date du jour : {{ "now"|date('d/m/Y') }}</p>
        <p>Participant : {{ app.user.lastName }} {{ app.user.firstName }}</p>
    </div>
    <div class="container box" style="width: 600px;">
        <h1 class="title is-3">Mettre à jour le profil du participant</h1>

        {{ include('user/_admin_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        <div class="filter1">
            <button class="button is-rounded">
                <a href="{{ path('user_list') }}">Revenir à la liste</a>
            </button>

        </div>
    </div>
{% endblock %}
