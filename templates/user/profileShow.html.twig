{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="column is-offset-9">
        <p>Date du jour : {{ "now"|date('d/m/Y') }}</p>
        <p>Participant : {{ app.user.lastName }} {{ app.user.firstName }}</p>
    </div>
<div class="container box" style="width: 600px;">
    <h1 class="title is-3">{{ user.pseudo }}</h1>
    <div class="registeredList">
    <table class="table">
        <tbody>
            <tr>
                <th>Prenom</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Campus</th>
                <td>{{ user.campus.name }}</td>
            </tr>

        </tbody>
    </table>
    </div>
    <div class="filter1">
    <button class="button is-rounded"><a href="{{ path('login') }}">back to list</a></button>
    </div>
    </div>
{% endblock %}
