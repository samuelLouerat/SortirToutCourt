{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="column is-offset-9">
        <p>Date du jour : {{ "now"|date('d/m/Y') }}</p>
        <p>Participant : {{ app.user.lastName }} {{ app.user.firstName }}</p>
    </div>
    <div class="container box" style="width: 600px;">
        <h1 class="title is-3">Détail Utilisateur</h1>
        <div class="registeredList">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>

                <tr>
                    <th>Nom</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ user.firstName }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ user.phone }}</td>
                </tr>
                <tr>
                    <th>Administrateur</th>
                    <td>{{ user.admin ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Actif</th>
                    <td>{{ user.active ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>Pseudo</th>
                    <td>{{ user.pseudo }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="filter1">
        <button class="button is-rounded"><a href="{{ path('user_list') }}">Revenir à la liste</a></button>
        </div>
        </div>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
