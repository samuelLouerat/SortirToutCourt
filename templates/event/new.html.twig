{% extends 'base.html.twig' %}

{% block title %}Nouvelle sortie{% endblock %}

{% block body %}
    <div class="column is-offset-9">
        <p>Date du jour : {{ "now"|date('d/m/Y') }}</p>
        <p>Participant : {{ app.user.lastName }} {{ app.user.firstName }}</p>
    </div>
    <div class="container box" style="width: 600px;">
        <h1 class="title is-3">Créer une nouvelle sortie</h1>

        {{ include('event/_form.html.twig') }}

        <div>
            <ul id="monadresse">
            </ul>
        </div>
        <div class="filter1">
            <button class="button is-rounded">
                <a href="{{ path('event_list') }}">Retour à la liste</a>
            </button>
        </div>

    </div>
    <script src="{{ asset("event/script.js") }}"></script>

{% endblock %}
