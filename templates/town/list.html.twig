{% extends 'base.html.twig' %}

{% block title %}Liste des villes{% endblock %}

{% block body %}
    <div class="column is-offset-9">
        <p>Date du jour : {{ "now"|date('d/m/Y') }}</p>
        <p>Participant : {{ app.user.lastName }} {{ app.user.firstName }}</p>
    </div>
    <div class="container box" style="width: 600px;">
        <h1 class="title is-3">Liste des villes</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Ville</th>
                <th>Code Postal</th>
            </tr>
            </thead>
            <tbody>
            {% for t in town %}
            <tr>
                <td>{{ t.name }}</td>
                <td>{{ t.postCode }}</td>
            </tbody>
            {% endfor %}

            <div class="filter1">
                <button class="button is-rounded" type="submit">
                    <a href="{{ path('town_new') }}">Create new</a>
                </button>
            </div>

    </div>
{% endblock %}